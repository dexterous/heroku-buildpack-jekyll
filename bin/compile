#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing dependencies"
if [ ! -f $1/Gemfile ]; then
  cp ../support/Gemfile $1/Gemfile
fi
bundle install --deployment | indent

echo "-----> Compiling Jekyll"
jekyll --no-auto --no-server | indent

echo "-----> Copying config.ru"
cp ../support/config.ru $1/config.ru
